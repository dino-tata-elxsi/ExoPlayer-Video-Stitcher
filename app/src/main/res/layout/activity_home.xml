<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeActivity">

    <Button
        android:id="@+id/pre_roll_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pre_roll_video"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/mid_roll_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mid_roll_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mid_roll_video"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/post_roll_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pre_roll_button" />

    <Button
        android:id="@+id/post_roll_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/post_roll_video"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mid_roll_button"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>